{
    "name": "ai-desktop-agent",
    "version": "1.0.0",
    "description": "AI-powered desktop automation agent with system-wide access and control",
    "main": "src/main/index.js",
    "author": "AI Desktop Agent Team",
    "license": "MIT",
    "scripts": {
        "start": "npm run build:renderer && electron .",
        "dev": "npm run build:renderer && electron . --dev",
        "build": "npm run build:renderer && electron-builder",
        "build:win": "npm run build:renderer && electron-builder --win",
        "build:mac": "npm run build:renderer && electron-builder --mac",
        "build:linux": "npm run build:renderer && electron-builder --linux",
        "build:renderer": "webpack --mode production",
        "watch:renderer": "webpack --mode development --watch",
        "lint": "eslint src/**/*.js",
        "test": "jest"
    },
    "dependencies": {
        "chokidar": "^5.0.0",
        "clsx": "^2.0.0",
        "dotenv": "^16.4.7",
        "framer-motion": "^10.16.16",
        "fs-extra": "^11.2.0",
        "lucide-react": "^0.263.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwind-merge": "^2.1.0",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@babel/core": "^7.23.5",
        "@babel/preset-env": "^7.23.5",
        "@babel/preset-react": "^7.23.3",
        "autoprefixer": "^10.4.16",
        "babel-loader": "^9.1.3",
        "css-loader": "^6.8.1",
        "electron": "^33.2.0",
        "electron-builder": "^25.1.8",
        "eslint": "^9.17.0",
        "jest": "^29.7.0",
        "postcss": "^8.4.32",
        "postcss-loader": "^7.3.3",
        "style-loader": "^3.3.3",
        "tailwindcss": "^3.3.6",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4"
    },
    "build": {
        "appId": "com.aidesktopagent.app",
        "productName": "AI Desktop Agent",
        "directories": {
            "output": "dist",
            "buildResources": "assets"
        },
        "files": [
            "src/**/*",
            "package.json"
        ],
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "assets/icon.ico"
        },
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "icon": "assets/icon.icns",
            "category": "public.app-category.productivity"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb",
                "rpm"
            ],
            "icon": "assets/icon.png",
            "category": "Utility"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    }
}
