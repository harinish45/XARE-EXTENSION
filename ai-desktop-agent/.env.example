# AI Desktop Agent Configuration

# ============================================
# AI Provider Configuration
# ============================================

# Anthropic API Key (for Claude)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key (for GPT-4)
# Get your key from: https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# Default AI provider (anthropic or openai)
DEFAULT_PROVIDER=anthropic

# ============================================
# Application Configuration
# ============================================

# Environment (development or production)
NODE_ENV=development

# Log level (error, warn, info, debug, verbose)
LOG_LEVEL=info

# ============================================
# Window Configuration
# ============================================

# Window dimensions
WINDOW_WIDTH=400
WINDOW_HEIGHT=600

# Window appearance
WINDOW_TRANSPARENT=true
WINDOW_ALWAYS_ON_TOP=true

# ============================================
# Automation Configuration
# ============================================

# Maximum concurrent tasks
MAX_CONCURRENT_TASKS=1

# Default delay between actions (ms)
ACTION_DELAY=100

# Enable confirmation for dangerous actions
ENABLE_CONFIRMATION=true

# ============================================
# Storage Configuration
# ============================================

# Custom data directory (optional)
# DATA_DIR=/path/to/custom/data

# Enable vector store for semantic search
ENABLE_VECTOR_STORE=true

# ============================================
# Security Configuration
# ============================================

# Enable safety checks
ENABLE_SAFETY_CHECKS=true

# Comma-separated list of allowed actions (optional, empty = all allowed)
# ALLOWED_ACTIONS=mouse_click,keyboard_type,screen_capture

# Comma-separated list of blocked actions
BLOCKED_ACTIONS=system_shutdown,system_restart

# ============================================
# Feature Flags
# ============================================

# Enable browser automation
ENABLE_BROWSER_AUTOMATION=true

# Enable file operations
ENABLE_FILE_OPERATIONS=true

# Enable system commands
ENABLE_SYSTEM_COMMANDS=false

# ============================================
# Hotkey Configuration
# ============================================

# Toggle window visibility
HOTKEY_TOGGLE=CommandOrControl+Shift+Space

# Screenshot and analyze
HOTKEY_SCREENSHOT=CommandOrControl+Shift+S

# Emergency stop
HOTKEY_EMERGENCY=CommandOrControl+Shift+Escape
